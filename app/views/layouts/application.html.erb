<!DOCTYPE html>
<html>
<head>
  <title>Kano</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="ui menu">
    <div class="item">
      Kano
    </div>
    <% if user_signed_in? %>
      <a href="<%= tests_path %> "class="item">My Tests</a>
    <% end %>
    <a href="<%= about_path %> "class="item">About</a>
    <div class="right menu">
      <% if user_signed_in? %>
      <div class="item">
        Signed in as <%= current_user.email %>&nbsp;&nbsp;
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "ui button" %>
      </div>
      <% else %>
      <div class="item">
        <%= link_to "Sign in", new_user_session_path, :class => "ui button teal" %>
        <%= link_to "Sign up", new_user_registration_path, :class => "ui button" %>
      </div>
      <% end %>
    </div>
  </div>

  <% flash.each do |name, msg| %>
    <div class="max-width has-padding">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
