<div class="ui two column page grid">

  <div class="column">
    <h1>Create a test</h1>
    <%= form_for (@test) do |f| %>
      <div class="ui form segment">
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>
        <%= f.label :description %><br>
        <%= f.text_area :description %><br>
        <%= f.label :question_one %><br>
        <%= f.text_area :question_one %><br>
        <%= f.label :question_two %><br>
        <%= f.text_area :question_two %><br>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
  <div class="column example">
    <div class="ui icon input">
        <input type="text" placeholder="Focus me..." data-content="You can use me to enter data" class="">
        <i class="search icon"></i>
      </div>
  </div>

</div>

<script>
$('.example input')
  .popup({
    on: 'focus'
  })
;
</script>